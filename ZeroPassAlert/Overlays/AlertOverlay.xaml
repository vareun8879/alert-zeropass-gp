<UserControl x:Class="ZeroPassAlert.Overlays.AlertOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             HorizontalAlignment="Center"
             VerticalAlignment="Center">

    <Border CornerRadius="8"
            BorderBrush="#0E5775"
            BorderThickness="2"
            Background="White"
            Padding="30"
            Width="560">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <Border Background="#0E5775"
                    CornerRadius="6 6 0 0"
                    Margin="-30 -30 -30 10">
                <TextBlock Text="제로패스 신규 방문자 알림"
                           Foreground="White"
                           FontSize="30"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Border>

            <!-- 본문 -->
            <StackPanel Grid.Row="1" Margin="10 10 10 20">
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TodayDate, StringFormat='{}{0:yyyy년 MM월 dd일 HH:mm:ss}'}" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="이름" FontSize="30" Width="170"/>
                    <TextBlock Text="{Binding Name}" FontSize="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="전화번호" FontSize="30" Width="170"/>
                    <TextBlock Text="{Binding Mobile}" FontSize="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="방문목적" FontSize="30" Width="170"/>
                    <TextBlock Text="{Binding VisitPurpose}" FontSize="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="방문장소" FontSize="30" Width="170"/>
                    <TextBlock Text="{Binding VisitLoc}" FontSize="30"/>
                </StackPanel>

            </StackPanel>

            <!-- 닫기 버튼 -->
            <Button Grid.Row="2"
                    Content="닫 기"
                    Width="180"
                    Height="55"
                    FontSize="26"
                    Foreground="White"
                    Background="#0E5775"
                    BorderBrush="#083D54"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="CloseButton_Click"/>
        </Grid>

    </Border>

</UserControl>