<UserControl x:Class="ZeroPassAlert.Views.AlertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:ZeroPassAlert.Utils"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="White"
             Loaded="AlertView_Loaded"
             >
    <UserControl.DataContext>
        <Binding Source="{x:Static utils:AppAlert.Instance}" />
    </UserControl.DataContext>
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 -->
        <Border Background="#0E5775" Grid.Row="0">
            <TextBlock Text="제로패스 방문자 알림 서비스"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Margin="20,0,0,0"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- 본문 영역 -->
        <Grid Grid.Row="1" x:Name="BodyGrid">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,40,0,0">

                <!-- 날짜 -->
                <TextBlock x:Name="TxtDate"
                           FontSize="45"
                           FontWeight="SemiBold"
                           Foreground="#000000"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"
                           Text="{Binding TodayDateText}"/>

                <!-- 내용 -->
                <TextBlock x:Name="TxtVisitorMessage"
                       FontSize="35"
                       Foreground="#000000"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Text="{Binding TodayVisitorCount,
                                StringFormat=금일 {0}건의 외부인 방문기록이 있습니다.}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>